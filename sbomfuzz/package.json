{
  "name": "sbomfuzz",
  "displayName": "sbomfuzz",
  "description": "a auto-harness generation tool for rust",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sbomfuzz.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sbomfuzzContainer",
          "title": "SBOMFuzz",
          "icon": "resources/temp_icon.png"
        }
      ]
    },
    "views": {
      "sbomfuzzContainer": [
        {
          "id": "sbomfuzzWebview",
          "type": "webview",
          "name": "Fuzz Targets"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "sbomfuzzView",
        "contents": "Welcome to SBOMFuzz! This is a dashboard for managing your fuzzing tasks.",
        "when": "view == sbomfuzzView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:webview": "vite build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "openai": "^5.6.0",
    "toml": "^3.0.0"
  }
}
